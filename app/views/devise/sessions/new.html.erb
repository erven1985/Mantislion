
<div>
  <%= devise_error_messages! %>
</div>
<div class="row">
  <div class="col-xs-8 col-xs-offset-0 col-sm-4 col-sm-offset-4 col-md-4 col-md-offset-4 col-lg-3 col-lg-offset-4">
      <div class="wrapper">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :class =>"form-signin") do |f| %>
  <h2 class="form-signin-heading">Log in</h2>
    <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Email Address" %>
    <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Password" %>
  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
       <input type="checkbox" name="user[remember_me]" value="1" checked="checked" /> &nbsp;&nbsp;<%= f.label :remember_me, :class => "my" %> 
    </div>
  <% end -%>
    <%= f.submit "LOG IN", :class => "btn btn-lg btn-warning btn-block" %>
<% end %>

</div>
    
  </div>
</div>

<style>
  
body  {
  /*background:   #778899 !important;  */
  background-image: url('../images/djenuff_01.png');
  background-size: cover;
  background-repeat: no-repeat;
}

.wrapper {  
  margin-top: 80px;
  margin-bottom: 80px;
}

.col-xs-8.col-xs-offset-0.col-sm-4.col-sm-offset-4 {
  -webkit-box-shadow:0 1px 4px rgba(0, 0, 0, 0.3), 0 0 40px rgba(0, 0, 0, 0.1) inset;
  -moz-box-shadow:0 1px 4px rgba(0, 0, 0, 0.3), 0 0 40px rgba(0, 0, 0, 0.1) inset;
  box-shadow:0 1px 4px rgba(0, 0, 0, 0.3), 0 0 40px rgba(0, 0, 0, 0.3) inset;
  padding: 0px 30px;
  margin-top: 12%;
  margin-left: 38%;  
}
.form-signin {
  max-width: 380px;
  padding: 15px 35px 45px;
  margin: 0 auto;
  background: #fff !important;  
  border: 1px solid rgba(0,0,0,0.1);  
}
  .form-signin-heading,
  .checkbox {
    margin-bottom: 30px;
    color: #fff;
  }

  .form-signin-heading {
    font-size: 1vw;
    text-transform: uppercase;
  }
  .btn.btn-lg.btn-warning.btn-block {
    font-size: 0.9vw;
  }
  .checkbox {
    font-weight: normal;
  }
  .my {
    color: #fff;
  }
  .form-control {
    position: relative;
    font-size: 16px;
    height: auto;
    padding: 10px;
    
  }

  input[type="email"] {
    margin-bottom: -1px;
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
  }

  input[type="password"] {
    margin-bottom: 20px;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
  }
}

</style>