<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @event.content %>
</p>

<p>
  <strong>Day:</strong>
  <%= @event.day %>
</p>

<p>
  <strong>Month:</strong>
  <%= @event.month %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @event.avatar.url(:medium) %>
</p>

<% if current_user %>
  <%= link_to 'Back', rails_admin_path %>
<% else %> 
  <%= link_to 'Back', root_path %>
<% end %>
